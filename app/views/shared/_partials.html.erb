<h4>
  <% page_title ||= "Cool page you Made" %>
  <%= page_title%>
</h4>

<%= render partial: "shared/error_messages", locals: { model: @book } %>

<%= form_for @book do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :author, "Autttttttthor"%>
<%= f.select :author_id, Author.all.map{ |auth| [auth.name, auth.id] } %>

<%= f.label :publication_year %>
<%= f.date_field :publication_year %>

<%= f.label :synopsis %>
<%= f.text_area :synopsis %>

<div>
  <%= f.label :genres %>
  <%= collection_check_boxes(:book, :genre_ids, Genre.all, :id, :name) %>
</div>

<%= f.submit action_name, class: "hollow button" %>
<% end %>
